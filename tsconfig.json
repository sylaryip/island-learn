{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": ".",
        "target": "ESNext",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "shared/*": [
                "shared/*"
            ],
            "@runtime": [
                "runtime/index.ts"
            ]
        }
    },
    "include": [
        "e2e/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
}